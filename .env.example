# VM Sentinel Environment Variables Template
# Copy this file to .env and update with your actual values

# VM Agent Configuration
VM_ID=my-vm-001
MONITORING_INTERVAL_MS=30000
IDLE_THRESHOLD_SECONDS=900
LOG_LEVEL=info

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Pub/Sub Topics
PUBSUB_STATUS_TOPIC=vm-status-topic
PUBSUB_COMMANDS_TOPIC=vm-commands-topic
PUBSUB_ALERTS_TOPIC=vm-alerts-topic

# Telegram Bot Configuration (for bot deployment)
TELEGRAM_BOT_TOKEN=your-bot-token-here
ALLOWED_USER_IDS=user1,user2,user3
WEBHOOK_URL=https://your-cloud-function-url.com/webhook

# Development
NODE_ENV=development
