{
  "name": "@vm-sentinel/agent",
  "version": "1.0.0",
  "description": "VM monitoring agent that tracks system health and communicates via Pub/Sub",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.0.0",
    "pino": "^8.15.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@vm-sentinel/shared-types": "*",
    "@vm-sentinel/eslint-config-custom": "*",
    "tsx": "^3.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "LohZJ",
  "license": "ISC"
}
