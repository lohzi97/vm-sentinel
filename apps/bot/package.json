{
  "name": "@vm-sentinel/bot",
  "version": "1.0.0",
  "description": "Telegram bot backend for remote VM control via Cloud Functions",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:@google-cloud/functions-framework",
    "start": "functions-framework --target=webhookHandler --source=dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "deploy": "npm run build && gcloud functions deploy vm-sentinel-bot --runtime nodejs18 --trigger-http --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/pubsub": "^4.0.0",
    "express": "^4.18.0",
    "telegraf": "^4.15.0",
    "pino": "^8.15.0"
  },
  "devDependencies": {
    "@vm-sentinel/shared-types": "*",
    "@vm-sentinel/eslint-config-custom": "*",
    "@types/express": "^4.17.0",
    "tsx": "^3.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "LohZJ",
  "license": "ISC"
}
